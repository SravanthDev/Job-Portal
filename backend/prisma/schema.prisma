// Prisma Schema for Job Portal Application


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


// User model with role-based access
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      UserRole
  resumeUrl String?
  createdAt DateTime @default(now())

  // Relations
  postedJobs   Job[]         @relation("RecruiterJobs")
  applications Application[] @relation("JobSeekerApplications")

  @@map("users")
}

// Job model posted by recruiters
model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  skills      String   @db.Text // comma-separated skills
  location    String
  postedById  Int
  createdAt   DateTime @default(now())

  // Relations
  postedBy     User          @relation("RecruiterJobs", fields: [postedById], references: [id], onDelete: Cascade)
  applications Application[] @relation("JobApplications")

  @@map("jobs")
}

// Application model linking job seekers to jobs
model Application {
  id        Int               @id @default(autoincrement())
  jobId     Int
  userId    Int
  status    ApplicationStatus @default(PENDING)
  createdAt DateTime          @default(now())

  // Relations
  job  Job  @relation("JobApplications", fields: [jobId], references: [id], onDelete: Cascade)
  user User @relation("JobSeekerApplications", fields: [userId], references: [id], onDelete: Cascade)

  // Prevent duplicate applications
  @@unique([jobId, userId])
  @@map("applications")
}

// Enums
enum UserRole {
  JOB_SEEKER
  RECRUITER
}

enum ApplicationStatus {
  PENDING
  SHORTLISTED
  REJECTED
}